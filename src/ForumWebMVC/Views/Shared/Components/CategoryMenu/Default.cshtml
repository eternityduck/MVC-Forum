<li class="dropdown">
    <a asp-controller="Topic" asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Topics<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var topic in Model)
        {
            <li>
                <a asp-controller="Topic" asp-action="Topic" asp-route-id="@topic.Id">@topic.Title</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Topic" asp-action="Index" asp-route-category="">View all topics</a>
        </li>
    </ul>
</li>